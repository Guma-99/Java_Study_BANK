<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
		    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- namespace의 값은 사용할 DAO의 풀패키지명 -->
<mapper namespace="com.gm.start.bankMembers.BankMembersDAO">

	<!-- id는 DAO의 메서드명과 동일하게 -->
	<select id="getLogin" parameterType="com.gm.start.bankMembers.BankMembersDTO" resultType="com.gm.start.bankMembers.BankMembersDTO">
		SELECT USERNAME, NAME FROM BANKMEMBERS WHERE USERNAME = #{userName} AND PASSWORD = #{passWord}
	</select>
</mapper>